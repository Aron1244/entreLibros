---
// src/pages/index.astro
import Layout from "../layouts/Layout.astro";
import HeroSection from "../components/HeroSection";
import BookCarousel from "../components/BookCarouselTailwind";
import CategoryGrid from "../components/CategoryGrid";
import Testimonials from "../components/Testimonials";
import Newsletter from "../components/Newsletter";
import GoToTestReader from "../components/GoToTestReader.astro";
---

<Layout title="EntreLibros - Tu librería online favorita">
  <main class="bg-primary-light">
    <!-- Hero Section -->
    <HeroSection />

    <GoToTestReader />
    <!-- Featured Books Carousel -->
    <section class="py-12 px-4 sm:px-6 lg:px-8">
      <div class="max-w-7xl mx-auto">
        <h2 class="text-3xl font-bold text-primary-dark mb-8 text-center">
          Libros Destacados
        </h2>
        <BookCarousel />
      </div>
    </section>

    <!-- Categories Grid -->
    <section class="py-12 bg-white">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <h2 class="text-3xl font-bold text-primary-dark mb-8 text-center">
          Explora por Categorías
        </h2>
        <CategoryGrid />
      </div>
    </section>

    <!-- Testimonials -->
    <section class="py-16 bg-gray-100">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <h2 class="text-3xl font-bold text-primary-dark mb-12 text-center">
          Lo que dicen nuestros lectores
        </h2>
        <Testimonials />
      </div>
    </section>

    <!-- Newsletter -->
    <section class="py-16 bg-primary-dark">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <Newsletter />
      </div>
    </section>
  </main>
</Layout>

<style>
  /* Utilidades para line-clamp */
  .line-clamp-1 {
    overflow: hidden;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 1;
  }

  .line-clamp-2 {
    overflow: hidden;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
  }

  .line-clamp-3 {
    overflow: hidden;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 3;
  }

  /* Mejoras para el scrollbar en los resultados de búsqueda */
  .overflow-y-auto::-webkit-scrollbar {
    width: 6px;
  }

  .overflow-y-auto::-webkit-scrollbar-track {
    background: #f1f5f9;
    border-radius: 3px;
  }

  .overflow-y-auto::-webkit-scrollbar-thumb {
    background: #cbd5e1;
    border-radius: 3px;
  }

  .overflow-y-auto::-webkit-scrollbar-thumb:hover {
    background: #94a3b8;
  }

  /* Animaciones suaves */
  @keyframes fadeIn {
    from {
      opacity: 0;
      transform: translateY(-10px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .animate-fadeIn {
    animation: fadeIn 0.2s ease-out;
  }
</style>

